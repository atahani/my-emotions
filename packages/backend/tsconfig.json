{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "target": "es2017",
        "baseUrl": "./src",
        "paths": {
            "config/*": ["config/*"],
            "common/*": ["common/*"],
            "modules": ["modules"]
        }
    },
    "include": ["src/**/*"]
}
